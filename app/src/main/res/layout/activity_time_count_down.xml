<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xss.mobile.activity.countdown.TimeCountDownActivity">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="倒计时开始："
        android:textColor="#f25824"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btn_by_handler_post_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By Handler Post Delay"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_by_handler_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By Handler Thread Sleep"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_by_timer_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By TimerTask"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_by_count_down_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By CountDownTimer"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>
    
</LinearLayout>
